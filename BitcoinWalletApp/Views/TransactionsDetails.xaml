<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinWalletApp.Views.TransactionsDetails"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#003F63">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="TransactionsList" SeparatorVisibility="None" ItemTapped="TransactionsList_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame CornerRadius="30" Padding="0" BackgroundColor="#353D40" Margin="10">
                                <FlexLayout JustifyContent="SpaceAround" Direction="Row" AlignItems="Center" >
                                    <Label Text="{Binding AmountOfTransaction}" Style="{StaticResource header}" TextColor="#fff"/>
                                    <Label Text="{Binding TransactionType}" Style="{StaticResource header}" TextColor="Green" />
                                    <Label Text="{Binding TransactionTime}" Style="{StaticResource header}" TextColor="#fff"/>
                                </FlexLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>