<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinWalletApp.Views.StartPage"
             BackgroundColor="#003F63"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        
        <StackLayout VerticalOptions="Center">
            <ActivityIndicator IsRunning="False" />
            <Label Text="Добро пожаловать!" Style="{StaticResource header}"/>
            <StackLayout Padding="63, 0" Spacing="0">
                <Button Text="Создать кошелёк" Clicked="CreateWallet_Clicked" BackgroundColor="#F2B138" Style="{StaticResource button}"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>