<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinWalletApp.Views.TabbedPages.SendPage"
             BackgroundColor="#003F63">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="BTC" BackgroundColor="#003F63" TextColor="#fff" HorizontalOptions="End" x:Name="ChangeCoin" TextTransform="None"/>
            <Frame x:Name="MainFrame" BackgroundColor="#fff" CornerRadius="30">
                <StackLayout>
                    <Picker ItemsSource="{Binding Addresses}" ItemDisplayBinding="{Binding PublicKey}" x:Name="AddressPicker" 
                            BackgroundColor="#fff" Title="Выберите ваш адрес" TitleColor="#000" FontAttributes="Bold"/>
                    <StackLayout>
                        <Label Text="Адрес получателя" Style="{StaticResource header}" />
                        <Entry Placeholder="Введите адрес получателя" Style="{StaticResource entry}" x:Name="Receiver" />
                        <Label Text="Сумма отправки" Style="{StaticResource header}" />
                        <Entry Keyboard="Numeric" Placeholder="mBTC 0.00" x:Name="AmountToSend" Style="{StaticResource entry}" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>