<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinWalletApp.Views.ParentPage"
             xmlns:local="clr-namespace:BitcoinWalletApp.Views.TabbedPages"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             android:TabbedPage.ToolbarPlacement="Bottom"
             x:DataType="TabbedPage"
             BarBackground="#003F63"
             NavigationPage.HasNavigationBar="False"
             android:ImageButton.IsShadowEnabled="False">
    
    <TabbedPage.Children>
        <local:MainPage IconImageSource="home.xml" />
        <local:SendPage IconImageSource="send.xml" />
        <local:ChangePage IconImageSource="change.xml" />
    </TabbedPage.Children>
    
</TabbedPage>